{{>layout/header}}

<h1>게시글 동록</h1>
<div class="container">
    <div class="col-md-10">
            <form>
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
                </div>

                <div class="form-group">
                    <label for="content">dDay</label>
                    <input type="date" id="dDay" min="{{tomorrow}}" max="{{term}}">
                </div>
            </form>

            <a href="/" role="button" class="btn btn-outline-secondary">취소</a>
            <button type="button" class="btn btn-outline-primary" id="btn-save">등록</button>
    </div>
</div>
{{>layout/footer}}